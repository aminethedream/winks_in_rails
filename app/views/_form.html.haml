= form_for @wink do |f|
  - if @wink.errors.any?
    #error_explanation
      %h2= "#{pluralize(@wink.errors.count, "error")} prohibited this post form being saved:"
      %ul
        - @wink.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f. label :giver
    = f. label :giver
  .actions
    = f.submit 'Save'

